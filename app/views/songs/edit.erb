<h1>Edit Song:</h1>
<form action="/songs/<%= @song.slug %>" method="post">
	<input type="hidden" name="_method" value="PATCH">
	<p>Name: <input type="text" name="song[name]" id="Name" value="<%= @song.name %>" /></p>
	<p>Artist: <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>"/></p>

	<% @genres.each do |genre| %>
		<p><%= genre.name %><input
								type="checkbox"
							    name="song[genre_ids][]"
								value="<%= genre.id %>"
								<% if @song.genre_ids.include? genre.id %>
									  checked
								<% end %>
							    id="<%= genre.name %>"/></p>
	<% end %>
	<input type="submit" id="Save"/>
</form>
